---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="Mider - Video & Photo Editing Suite | Conterso">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero__content">
          <div class="hero__badge">Video & Photo Editing</div>
          <h1 class="hero__title">Mider</h1>
          <p class="hero__subtitle">
            Comprehensive video and photo editing suite that empowers content creators, 
            media professionals, and marketing teams to produce stunning visual content.
          </p>
          <div class="hero__actions">
            <a href="/contact" class="btn btn--primary">Start Free Trial</a>
            <a href="#features" class="btn btn--secondary">See Features</a>
          </div>
        </div>
      </div>
    </section>

    <!-- Video Editing Features -->
    <section id="features" class="video-features">
      <div class="container">
        <h2 class="section__title">Professional Video Editing</h2>
        <div class="features__grid">
          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
                <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
                <polygon points="10,9 13,11 10,13" stroke="currentColor" stroke-width="2" fill="currentColor"/>
              </svg>
            </div>
            <h3 class="feature__title">Non-Linear Editing</h3>
            <p class="feature__description">
              Advanced timeline-based editing with unlimited video and audio tracks. 
              Professional cutting tools and precision editing capabilities.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <circle cx="12" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
                <path d="M12 1v6M12 17v6M4.22 4.22l4.24 4.24M15.54 15.54l4.24 4.24M1 12h6M17 12h6M4.22 19.78l4.24-4.24M15.54 8.46l4.24-4.24" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Color Grading</h3>
            <p class="feature__description">
              Professional color correction and grading tools with advanced color wheels, 
              curves, and LUT support for cinematic looks.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M14.7 6.3a1 1 0 0 0 0 1.4l1.6 1.6a1 1 0 0 0 1.4 0l3.77-3.77a6 6 0 0 1-7.94 7.94l-6.91 6.91a2.12 2.12 0 0 1-3-3l6.91-6.91a6 6 0 0 1 7.94-7.94l-3.76 3.76z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Motion Graphics</h3>
            <p class="feature__description">
              Built-in motion graphics engine with keyframe animation, 
              text effects, and professional transitions and effects library.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <polygon points="11 5,6 9,2 9,2 15,6 15,11 19,11 5" stroke="currentColor" stroke-width="2"/>
                <path d="M19.07 4.93a10 10 0 0 1 0 14.14" stroke="currentColor" stroke-width="2"/>
                <path d="M15.54 8.46a5 5 0 0 1 0 7.07" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Audio Post-Production</h3>
            <p class="feature__description">
              Advanced audio editing with noise reduction, audio effects, 
              and multi-channel mixing for professional sound design.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Photo Editing Features -->
    <section class="photo-features">
      <div class="container">
        <h2 class="section__title">Advanced Photo Editing</h2>
        <div class="features__grid">
          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                <path d="M21 15l-5-5L5 21" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Professional Retouching</h3>
            <p class="feature__description">
              Advanced retouching tools including healing brush, clone stamp, 
              and content-aware fill for flawless image editing.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="12" r="4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Layer Management</h3>
            <p class="feature__description">
              Sophisticated layer system with blend modes, masks, and adjustment layers 
              for non-destructive editing workflows.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M18 8h1a4 4 0 0 1 0 8h-1M2 8h16l4 4-4 4H2l4-4-4-4z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">AI-Powered Tools</h3>
            <p class="feature__description">
              Machine learning enhanced features including smart selection, 
              automatic background removal, and intelligent upscaling.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                <path d="M7 9l4 4 6-6" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Batch Processing</h3>
            <p class="feature__description">
              Process multiple images simultaneously with customizable actions 
              and automated workflows for efficient production.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Workflows Section -->
    <section class="workflows">
      <div class="container">
        <h2 class="section__title">Streamlined Workflows</h2>
        <div class="workflows__grid">
          <div class="workflow">
            <div class="workflow__header">
              <div class="workflow__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2" stroke="currentColor" stroke-width="2"/>
                  <rect x="8" y="2" width="8" height="4" rx="1" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="workflow__title">Content Creation</h3>
            </div>
            <p class="workflow__description">
              Perfect for YouTubers, social media managers, and digital marketers 
              creating engaging video and photo content.
            </p>
            <ul class="workflow__features">
              <li>Social media templates</li>
              <li>Quick export presets</li>
              <li>Brand asset management</li>
              <li>Team collaboration</li>
            </ul>
          </div>

          <div class="workflow">
            <div class="workflow__header">
              <div class="workflow__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                  <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
                  <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="workflow__title">Film Production</h3>
            </div>
            <p class="workflow__description">
              Professional tools for filmmakers, video producers, and post-production 
              studios working on narrative and commercial projects.
            </p>
            <ul class="workflow__features">
              <li>Advanced color grading</li>
              <li>Multi-camera editing</li>
              <li>Professional codecs</li>
              <li>Collaborative review</li>
            </ul>
          </div>

          <div class="workflow">
            <div class="workflow__header">
              <div class="workflow__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <polyline points="12,6 12,12 16,14" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="workflow__title">Commercial Photography</h3>
            </div>
            <p class="workflow__description">
              Comprehensive tools for commercial photographers, product photography, 
              and professional photo retouching services.
            </p>
            <ul class="workflow__features">
              <li>Product photography tools</li>
              <li>Professional retouching</li>
              <li>Color management</li>
              <li>Client proof galleries</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Format Support -->
    <section class="formats">
      <div class="container">
        <h2 class="section__title">Universal Format Support</h2>
        <div class="formats__content">
          <div class="formats__category">
            <h3 class="formats__title">Video Formats</h3>
            <div class="formats__list">
              <span class="format-tag">MP4</span>
              <span class="format-tag">MOV</span>
              <span class="format-tag">AVI</span>
              <span class="format-tag">MKV</span>
              <span class="format-tag">ProRes</span>
              <span class="format-tag">DNxHD</span>
              <span class="format-tag">H.264</span>
              <span class="format-tag">H.265</span>
              <span class="format-tag">VP9</span>
              <span class="format-tag">AV1</span>
            </div>
          </div>

          <div class="formats__category">
            <h3 class="formats__title">Photo Formats</h3>
            <div class="formats__list">
              <span class="format-tag">JPEG</span>
              <span class="format-tag">PNG</span>
              <span class="format-tag">TIFF</span>
              <span class="format-tag">RAW</span>
              <span class="format-tag">PSD</span>
              <span class="format-tag">HEIF</span>
              <span class="format-tag">WebP</span>
              <span class="format-tag">SVG</span>
              <span class="format-tag">EXR</span>
              <span class="format-tag">DNG</span>
            </div>
          </div>

          <div class="formats__category">
            <h3 class="formats__title">Audio Formats</h3>
            <div class="formats__list">
              <span class="format-tag">WAV</span>
              <span class="format-tag">MP3</span>
              <span class="format-tag">AAC</span>
              <span class="format-tag">FLAC</span>
              <span class="format-tag">OGG</span>
              <span class="format-tag">AIFF</span>
              <span class="format-tag">M4A</span>
              <span class="format-tag">WMA</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section class="pricing">
      <div class="container">
        <h2 class="section__title">Choose Your Plan</h2>
        <div class="pricing__grid">
          <div class="pricing__card pricing__card--featured">
            <div class="pricing__badge">Most Popular</div>
            <h3 class="pricing__title">Pro</h3>
            <div class="pricing__price">
              <span class="pricing__currency">£</span>
              <span class="pricing__amount">20</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Non-linear video editing</li>
              <li>Basic color correction</li>
              <li>Photo retouching tools</li>
              <li>Standard export formats</li>
              <li>Email support</li>
            </ul>
            <a href="/contact" class="btn btn--primary">Choose Pro</a>
          </div>

          <div class="pricing__card">
            <h3 class="pricing__title">Premium</h3>
            <div class="pricing__price">
              <span class="pricing__currency">£</span>
              <span class="pricing__amount">30</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Advanced video editing</li>
              <li>Professional color grading</li>
              <li>Motion graphics tools</li>
              <li>Advanced photo editing</li>
              <li>Priority support</li>
              <li>Premium export options</li>
            </ul>
            <a href="/contact" class="btn btn--secondary">Choose Premium</a>
          </div>

          <div class="pricing__card">
            <h3 class="pricing__title">Max</h3>
            <div class="pricing__price">
              <span class="pricing__currency">£</span>
              <span class="pricing__amount">40</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Complete editing suite</li>
              <li>Advanced color workflows</li>
              <li>Professional motion graphics</li>
              <li>AI-powered editing tools</li>
              <li>24/7 dedicated support</li>
              <li>Unlimited export formats</li>
              <li>Collaboration features</li>
            </ul>
            <a href="/contact" class="btn btn--secondary">Contact Sales</a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <div class="cta__content">
          <h2 class="cta__title">Unleash Your Creative Potential</h2>
          <p class="cta__description">
            Join millions of creators worldwide who trust Mider for their video 
            and photo editing needs. Start your free trial today.
          </p>
          <div class="cta__actions">
            <a href="/contact" class="btn btn--primary btn--large">Start Free Trial</a>
            <a href="/products" class="btn btn--secondary-light">View All Products</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-background-light) 0%, var(--color-background) 100%);
    padding: 8rem 0 6rem;
  }

  .hero__content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero__badge {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .hero__title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Features Sections */
  .video-features, .photo-features {
    padding: 6rem 0;
  }

  .photo-features {
    background-color: var(--color-background-light);
  }

  .section__title {
    text-align: center;
    margin-bottom: 4rem;
    color: var(--color-primary);
  }

  .features__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .feature {
    text-align: center;
    padding: 2rem;
  }

  .feature__icon {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .feature__title {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .feature__description {
    color: var(--color-secondary);
    line-height: 1.6;
  }

  /* Workflows Section */
  .workflows {
    padding: 6rem 0;
  }

  .workflows__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .workflow {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2.5rem;
    transition: all 0.3s ease;
  }

  .workflow:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .workflow__header {
    display: flex;
    align-items: center;
    margin-bottom: 1.5rem;
  }

  .workflow__icon {
    color: var(--color-accent);
    margin-right: 1rem;
    flex-shrink: 0;
  }

  .workflow__title {
    color: var(--color-primary);
    margin: 0;
  }

  .workflow__description {
    color: var(--color-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .workflow__features {
    list-style: none;
  }

  .workflow__features li {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .workflow__features li::before {
    content: '◉';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-size: 0.75rem;
  }

  /* Formats Section */
  .formats {
    background-color: var(--color-background-light);
    padding: 6rem 0;
  }

  .formats__content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
  }

  .formats__category {
    text-align: center;
  }

  .formats__title {
    margin-bottom: 2rem;
    color: var(--color-primary);
  }

  .formats__list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    justify-content: center;
  }

  .format-tag {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    padding: 0.5rem 1rem;
    border-radius: 1.5rem;
    color: var(--color-secondary);
    font-size: 0.875rem;
    font-weight: 600;
    transition: all 0.2s ease;
  }

  .format-tag:hover {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  /* Pricing Section */
  .pricing {
    padding: 6rem 0;
  }

  .pricing__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing__card {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2.5rem;
    text-align: center;
    position: relative;
    transition: all 0.3s ease;
  }

  .pricing__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .pricing__card--featured {
    border-color: var(--color-accent);
    transform: scale(1.05);
  }

  .pricing__card--featured:hover {
    transform: scale(1.05) translateY(-4px);
  }

  .pricing__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .pricing__title {
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .pricing__price {
    margin-bottom: 2rem;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
  }

  .pricing__currency {
    font-size: 1.5rem;
    color: var(--color-secondary);
  }

  .pricing__amount {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .pricing__period {
    color: var(--color-secondary);
  }

  .pricing__features {
    list-style: none;
    margin-bottom: 2rem;
    text-align: left;
  }

  .pricing__features li {
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .pricing__features li::before {
    content: '◉';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-size: 0.75rem;
  }

  /* CTA Section */
  .cta {
    background-color: var(--color-primary);
    color: white;
    padding: 6rem 0;
  }

  .cta__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta__title {
    color: white;
    margin-bottom: 1rem;
  }

  .cta__description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .cta__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid;
    font-size: 1rem;
  }

  .btn--primary {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .btn--primary:hover {
    background-color: #0052a3;
    border-color: #0052a3;
    text-decoration: none;
  }

  .btn--secondary {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-border);
  }

  .btn--secondary:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    text-decoration: none;
  }

  .btn--secondary-light {
    background-color: transparent;
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .btn--secondary-light:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: white;
    text-decoration: none;
  }

  .btn--large {
    padding: 1.125rem 2.5rem;
    font-size: 1.125rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: 6rem 0 4rem;
    }

    .hero__title {
      font-size: 2.5rem;
    }

    .hero__actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }

    .video-features, .photo-features, .workflows, .formats, .pricing, .cta {
      padding: 4rem 0;
    }

    .features__grid, .workflows__grid {
      grid-template-columns: 1fr;
