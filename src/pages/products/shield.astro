---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="Shield - Cybersecurity Platform | Conterso">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero__content">
          <div class="hero__badge">Cybersecurity Platform</div>
          <h1 class="hero__title">Shield</h1>
          <p class="hero__subtitle">
            Advanced cybersecurity platform that provides comprehensive protection against 
            modern threats with AI-powered detection and automated response capabilities.
          </p>
          <div class="hero__actions">
            <a href="/contact" class="btn btn--primary">Start Free Trial</a>
            <a href="#features" class="btn btn--secondary">Explore Security</a>
          </div>
        </div>
        <div class="hero__visual">
          <img src="/images/products/shield-security.svg" alt="Shield Cybersecurity Platform" class="hero__image" />
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="features">
      <div class="container">
        <h2 class="section__title">Advanced Threat Protection</h2>
        <div class="features__grid">
          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2"/>
                <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">AI-Powered Detection</h3>
            <p class="feature__description">
              Machine learning algorithms continuously analyze patterns and behaviors 
              to identify and prevent sophisticated cyber threats in real-time.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <rect x="3" y="11" width="18" height="11" rx="2" stroke="currentColor" stroke-width="2"/>
                <circle cx="12" cy="16" r="1" stroke="currentColor" stroke-width="2"/>
                <path d="M7 11V7a5 5 0 0 1 10 0v4" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Zero Trust Architecture</h3>
            <p class="feature__description">
              Implement zero trust security model with continuous verification, 
              micro-segmentation, and least-privilege access control.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Automated Response</h3>
            <p class="feature__description">
              Intelligent automated incident response system that contains threats, 
              alerts security teams, and initiates remediation procedures.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <polyline points="22,12 18,12 15,21 9,3 6,12 2,12" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Real-Time Monitoring</h3>
            <p class="feature__description">
              24/7 network monitoring with comprehensive dashboards, alerts, 
              and forensic analysis capabilities for complete visibility.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <circle cx="18" cy="5" r="3" stroke="currentColor" stroke-width="2"/>
                <circle cx="6" cy="12" r="3" stroke="currentColor" stroke-width="2"/>
                <circle cx="18" cy="19" r="3" stroke="currentColor" stroke-width="2"/>
                <line x1="8.59" y1="13.51" x2="15.42" y2="17.49" stroke="currentColor" stroke-width="2"/>
                <line x1="15.41" y1="6.51" x2="8.59" y2="10.49" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Threat Intelligence</h3>
            <p class="feature__description">
              Global threat intelligence network provides up-to-date information 
              on emerging threats and vulnerability assessments.
            </p>
          </div>

          <div class="feature">
            <div class="feature__icon">
              <svg width="48" height="48" viewBox="0 0 24 24" fill="none">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z" stroke="currentColor" stroke-width="2"/>
                <polyline points="14,2 14,8 20,8" stroke="currentColor" stroke-width="2"/>
                <line x1="16" y1="13" x2="8" y2="13" stroke="currentColor" stroke-width="2"/>
                <line x1="16" y1="17" x2="8" y2="17" stroke="currentColor" stroke-width="2"/>
              </svg>
            </div>
            <h3 class="feature__title">Compliance Management</h3>
            <p class="feature__description">
              Built-in compliance frameworks for GDPR, HIPAA, SOX, and other 
              regulations with automated reporting and audit trails.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Use Cases Section -->
    <section class="use-cases">
      <div class="container">
        <h2 class="section__title">Comprehensive Security Solutions</h2>
        <div class="use-cases__grid">
          <div class="use-case">
            <h3 class="use-case__title">Enterprise Networks</h3>
            <p class="use-case__description">
              Protect large-scale enterprise networks with advanced threat detection, 
              network segmentation, and centralized security management.
            </p>
            <ul class="use-case__features">
              <li>Network access control</li>
              <li>Advanced firewall management</li>
              <li>Intrusion detection & prevention</li>
              <li>Security orchestration</li>
            </ul>
          </div>

          <div class="use-case">
            <h3 class="use-case__title">Cloud Infrastructure</h3>
            <p class="use-case__description">
              Secure cloud environments with multi-cloud visibility, container security, 
              and cloud-native threat protection capabilities.
            </p>
            <ul class="use-case__features">
              <li>Cloud security posture management</li>
              <li>Container & Kubernetes security</li>
              <li>Multi-cloud visibility</li>
              <li>Infrastructure monitoring</li>
            </ul>
          </div>

          <div class="use-case">
            <h3 class="use-case__title">Endpoint Protection</h3>
            <p class="use-case__description">
              Comprehensive endpoint security for desktops, laptops, and mobile devices 
              with advanced malware protection and device management.
            </p>
            <ul class="use-case__features">
              <li>Next-gen antivirus</li>
              <li>Endpoint detection & response</li>
              <li>Device compliance management</li>
              <li>Mobile device security</li>
            </ul>
          </div>

          <div class="use-case">
            <h3 class="use-case__title">Identity & Access</h3>
            <p class="use-case__description">
              Advanced identity and access management with single sign-on, 
              multi-factor authentication, and privileged access management.
            </p>
            <ul class="use-case__features">
              <li>Single sign-on (SSO)</li>
              <li>Multi-factor authentication</li>
              <li>Privileged access management</li>
              <li>Identity governance</li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Security Dashboard -->
    <section class="dashboard">
      <div class="container">
        <h2 class="section__title">Unified Security Dashboard</h2>
        <div class="dashboard__content">
          <div class="dashboard__features">
            <div class="dashboard__feature">
              <div class="dashboard__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <rect x="3" y="4" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                  <line x1="16" y1="2" x2="16" y2="6" stroke="currentColor" stroke-width="2"/>
                  <line x1="8" y1="2" x2="8" y2="6" stroke="currentColor" stroke-width="2"/>
                  <line x1="3" y1="10" x2="21" y2="10" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="dashboard__title">Real-Time Analytics</h3>
              <p class="dashboard__description">
                Live security metrics, threat analysis, and performance monitoring 
                with customizable dashboards and reporting.
              </p>
            </div>

            <div class="dashboard__feature">
              <div class="dashboard__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <path d="M18 6l-12 12" stroke="currentColor" stroke-width="2"/>
                  <path d="M6 6l12 12" stroke="currentColor" stroke-width="2"/>
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="dashboard__title">Incident Management</h3>
              <p class="dashboard__description">
                Streamlined incident response workflow with automated ticketing, 
                investigation tools, and forensic capabilities.
              </p>
            </div>

            <div class="dashboard__feature">
              <div class="dashboard__icon">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="none">
                  <polyline points="9,11 12,14 22,4" stroke="currentColor" stroke-width="2"/>
                  <path d="M21 12v7a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11" stroke="currentColor" stroke-width="2"/>
                </svg>
              </div>
              <h3 class="dashboard__title">Compliance Reporting</h3>
              <p class="dashboard__description">
                Automated compliance reporting with built-in templates for major 
                regulatory frameworks and audit requirements.
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section class="pricing">
      <div class="container">
        <h2 class="section__title">Choose Your Security Plan</h2>
        <div class="pricing__grid">
          <div class="pricing__card">
            <h3 class="pricing__title">Essential</h3>
            <div class="pricing__price">
              <span class="pricing__currency">¬£</span>
              <span class="pricing__amount">15</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Basic threat detection</li>
              <li>Endpoint protection</li>
              <li>Email security</li>
              <li>Standard support</li>
              <li>Basic reporting</li>
            </ul>
            <a href="/contact" class="btn btn--secondary">Get Started</a>
          </div>

          <div class="pricing__card pricing__card--featured">
            <div class="pricing__badge">Most Popular</div>
            <h3 class="pricing__title">Professional</h3>
            <div class="pricing__price">
              <span class="pricing__currency">¬£</span>
              <span class="pricing__amount">25</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Advanced AI threat detection</li>
              <li>Zero trust architecture</li>
              <li>Automated response</li>
              <li>Real-time monitoring</li>
              <li>Priority support</li>
              <li>Compliance management</li>
            </ul>
            <a href="/contact" class="btn btn--primary">Choose Professional</a>
          </div>

          <div class="pricing__card">
            <h3 class="pricing__title">Enterprise</h3>
            <div class="pricing__price">
              <span class="pricing__currency">¬£</span>
              <span class="pricing__amount">35</span>
              <span class="pricing__period">/user/month</span>
            </div>
            <ul class="pricing__features">
              <li>Complete security platform</li>
              <li>Custom threat intelligence</li>
              <li>Advanced forensics</li>
              <li>24/7 dedicated support</li>
              <li>Custom integrations</li>
              <li>Professional services</li>
              <li>Unlimited compliance reports</li>
            </ul>
            <a href="/contact" class="btn btn--secondary">Contact Sales</a>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <div class="cta__content">
          <h2 class="cta__title">Protect Your Organization Today</h2>
          <p class="cta__description">
            Don't wait for a security breach. Start your free trial of Shield and experience 
            enterprise-grade cybersecurity protection for your organization.
          </p>
          <div class="cta__actions">
            <a href="/contact" class="btn btn--primary btn--large">Start Free Trial</a>
            <a href="/products" class="btn btn--secondary-light">View All Products</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-background-light) 0%, var(--color-background) 100%);
    padding: 8rem 0 6rem;
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .hero__content {
    max-width: 600px;
  }

  .hero__badge {
    display: inline-block;
    background-color: var(--color-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .hero__title {
    font-size: 4rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary);
    margin-bottom: 2.5rem;
    line-height: 1.6;
  }

  .hero__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero__visual {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .hero__image {
    width: 100%;
    height: auto;
    max-width: 400px;
    border-radius: 1rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
  }

  /* Features Section */
  .features {
    padding: 6rem 0;
  }

  .section__title {
    text-align: center;
    margin-bottom: 4rem;
    color: var(--color-primary);
  }

  .features__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .feature {
    text-align: center;
    padding: 2rem;
  }

  .feature__icon {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .feature__title {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .feature__description {
    color: var(--color-secondary);
    line-height: 1.6;
  }

  /* Use Cases Section */
  .use-cases {
    background-color: var(--color-background-light);
    padding: 6rem 0;
  }

  .use-cases__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
  }

  .use-case {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2.5rem;
    transition: all 0.3s ease;
  }

  .use-case:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .use-case__title {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .use-case__description {
    color: var(--color-secondary);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .use-case__features {
    list-style: none;
  }

  .use-case__features li {
    color: var(--color-secondary);
    margin-bottom: 0.5rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .use-case__features li::before {
    content: 'üõ°Ô∏è';
    position: absolute;
    left: 0;
    font-size: 0.875rem;
  }

  /* Dashboard Section */
  .dashboard {
    padding: 6rem 0;
  }

  .dashboard__content {
    max-width: 1000px;
    margin: 0 auto;
  }

  .dashboard__features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
  }

  .dashboard__feature {
    text-align: center;
    padding: 2rem;
  }

  .dashboard__icon {
    color: var(--color-accent);
    margin-bottom: 1.5rem;
    display: flex;
    justify-content: center;
  }

  .dashboard__title {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .dashboard__description {
    color: var(--color-secondary);
    line-height: 1.6;
  }

  /* Pricing Section */
  .pricing {
    background-color: var(--color-background-light);
    padding: 6rem 0;
  }

  .pricing__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
  }

  .pricing__card {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    padding: 2.5rem;
    text-align: center;
    position: relative;
    transition: all 0.3s ease;
  }

  .pricing__card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .pricing__card--featured {
    border-color: var(--color-accent);
    transform: scale(1.05);
  }

  .pricing__card--featured:hover {
    transform: scale(1.05) translateY(-4px);
  }

  .pricing__badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-accent);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 2rem;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .pricing__title {
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .pricing__price {
    margin-bottom: 2rem;
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
  }

  .pricing__currency {
    font-size: 1.5rem;
    color: var(--color-secondary);
  }

  .pricing__amount {
    font-size: 3rem;
    font-weight: 700;
    color: var(--color-primary);
  }

  .pricing__period {
    color: var(--color-secondary);
  }

  .pricing__features {
    list-style: none;
    margin-bottom: 2rem;
    text-align: left;
  }

  .pricing__features li {
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .pricing__features li::before {
    content: 'üõ°Ô∏è';
    position: absolute;
    left: 0;
    font-size: 0.75rem;
  }

  /* CTA Section */
  .cta {
    background-color: var(--color-primary);
    color: white;
    padding: 6rem 0;
  }

  .cta__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta__title {
    color: white;
    margin-bottom: 1rem;
  }

  .cta__description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  .cta__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid;
    font-size: 1rem;
  }

  .btn--primary {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .btn--primary:hover {
    background-color: #0052a3;
    border-color: #0052a3;
    text-decoration: none;
  }

  .btn--secondary {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-border);
  }

  .btn--secondary:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    text-decoration: none;
  }

  .btn--secondary-light {
    background-color: transparent;
    color: white;
    border-color: rgba(255, 255, 255, 0.3);
  }

  .btn--secondary-light:hover {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: white;
    text-decoration: none;
  }

  .btn--large {
    padding: 1.125rem 2.5rem;
    font-size: 1.125rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: 6rem 0 4rem;
    }

    .hero .container {
      grid-template-columns: 1fr;
      gap: 2rem;
      text-align: center;
    }

    .hero__title {
      font-size: 2.5rem;
    }

    .hero__actions {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 100%;
      max-width: 300px;
      text-align: center;
    }

    .features, .use-cases, .dashboard, .pricing, .cta {
      padding: 4rem 0;
    }

    .features__grid, .use-cases__grid, .dashboard__features {
      grid-template-columns: 1fr;
    }

    .pricing__grid {
      grid-template-columns: 1fr;
    }

    .pricing__card--featured {
      transform: none;
    }

    .pricing__card--featured:hover {
      transform: translateY(-4px);
    }

    .cta__actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>