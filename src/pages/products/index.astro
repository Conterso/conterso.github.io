---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---

<BaseLayout title="Products - Conterso Technology Solutions">
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero__content">
          <h1 class="hero__title">Our Products</h1>
          <p class="hero__subtitle">
            Comprehensive technology solutions designed to power your enterprise 
            and unleash your team's potential.
          </p>
        </div>
      </div>
    </section>

    <!-- Products Grid -->
    <section class="products">
      <div class="container">
        <div class="products__grid">
          <!-- Doors -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/doors-os.svg" alt="Doors Operating System" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Doors</h2>
                  <p class="product__category">Operating System</p>
                </div>
              </div>
              
              <p class="product__description">
                A revolutionary enterprise operating system built from the ground up with security, 
                performance, and scalability at its core. Doors provides a stable foundation for 
                mission-critical applications and seamless user experiences.
              </p>
              
              <ul class="product__features">
                <li>Enterprise-grade security architecture</li>
                <li>High-performance kernel optimization</li>
                <li>Advanced virtualization support</li>
                <li>Comprehensive management tools</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/doors" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>

          <!-- Work -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/work-office.svg" alt="Work Office Suite" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <rect x="2" y="3" width="20" height="14" rx="2" stroke="currentColor" stroke-width="2"/>
                    <line x1="8" y1="21" x2="16" y2="21" stroke="currentColor" stroke-width="2"/>
                    <line x1="12" y1="17" x2="12" y2="21" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Work</h2>
                  <p class="product__category">Office Software Bundle</p>
                </div>
              </div>
              
              <p class="product__description">
                A complete office productivity suite that streamlines workflows, enhances collaboration, 
                and empowers teams to achieve more. Work integrates seamlessly with existing enterprise 
                infrastructure while providing modern tools for today's workforce.
              </p>
              
              <ul class="product__features">
                <li>Document processing and collaboration</li>
                <li>Spreadsheet analysis and automation</li>
                <li>Presentation design and delivery</li>
                <li>Project management integration</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/work" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>

          <!-- Sounder -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/sounder-music.svg" alt="Sounder Music Production" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <polygon points="11 5,6 9,2 9,2 15,6 15,11 19,11 5" stroke="currentColor" stroke-width="2"/>
                    <path d="M19.07 4.93a10 10 0 0 1 0 14.14" stroke="currentColor" stroke-width="2"/>
                    <path d="M15.54 8.46a5 5 0 0 1 0 7.07" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Sounder</h2>
                  <p class="product__category">Music Production</p>
                </div>
              </div>
              
              <p class="product__description">
                Professional music creation and production software with cutting-edge features for 
                artists, producers, and sound engineers. Sounder combines intuitive design with 
                powerful audio processing capabilities.
              </p>
              
              <ul class="product__features">
                <li>Multi-track recording and editing</li>
                <li>Advanced audio effects and processing</li>
                <li>Virtual instrument integration</li>
                <li>Professional mixing and mastering</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/sounder" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>

          <!-- Mider -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/mider-editing.svg" alt="Mider Video/Photo Editor" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2"/>
                    <circle cx="8.5" cy="8.5" r="1.5" stroke="currentColor" stroke-width="2"/>
                    <path d="M21 15l-5-5L5 21" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Mider</h2>
                  <p class="product__category">Video & Photo Editing</p>
                </div>
              </div>
              
              <p class="product__description">
                Comprehensive video and photo editing suite designed for content creators, media 
                professionals, and marketing teams. Mider delivers professional-grade tools with 
                an accessible interface.
              </p>
              
              <ul class="product__features">
                <li>Non-linear video editing</li>
                <li>Advanced color correction and grading</li>
                <li>Motion graphics and animation</li>
                <li>Professional photo retouching</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/mider" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>

          <!-- Shield -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/shield-security.svg" alt="Shield Cybersecurity Platform" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z" stroke="currentColor" stroke-width="2"/>
                    <path d="M9 12l2 2 4-4" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Shield</h2>
                  <p class="product__category">Cybersecurity Platform</p>
                </div>
              </div>
              
              <p class="product__description">
                Advanced cybersecurity platform that provides comprehensive protection against 
                modern threats with AI-powered detection and automated response capabilities.
              </p>
              
              <ul class="product__features">
                <li>AI-powered threat detection</li>
                <li>Zero trust architecture</li>
                <li>Automated incident response</li>
                <li>Real-time security monitoring</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/shield" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>

          <!-- Flow -->
          <div class="product">
            <div class="product__image">
              <img src="/images/products/flow-project.svg" alt="Flow Project Management" class="product__image-element" />
            </div>
            
            <div class="product__content">
              <div class="product__header">
                <div class="product__icon">
                  <svg width="60" height="60" viewBox="0 0 24 24" fill="none">
                    <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z" stroke="currentColor" stroke-width="2"/>
                    <polyline points="3.27,6.96 12,12.01 20.73,6.96" stroke="currentColor" stroke-width="2"/>
                    <line x1="12" y1="22.08" x2="12" y2="12" stroke="currentColor" stroke-width="2"/>
                  </svg>
                </div>
                <div class="product__meta">
                  <h2 class="product__title">Flow</h2>
                  <p class="product__category">Project Management</p>
                </div>
              </div>
              
              <p class="product__description">
                Intuitive project management platform that streamlines workflows, enhances team 
                collaboration, and delivers projects on time with powerful planning tools.
              </p>
              
              <ul class="product__features">
                <li>Advanced project planning tools</li>
                <li>Team collaboration features</li>
                <li>Time tracking & analytics</li>
                <li>Customizable workflows</li>
              </ul>
              
              <div class="product__actions">
                <a href="/products/flow" class="btn btn--primary">Learn More</a>
                <a href="/contact" class="btn btn--secondary">Get Quote</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Integration Section -->
    <section class="integration">
      <div class="container">
        <div class="integration__content">
          <h2 class="section__title">Seamless Integration</h2>
          <p class="section__subtitle">
            All Conterso products are designed to work together, creating a unified ecosystem 
            that maximizes productivity and efficiency across your organization.
          </p>
          
          <div class="integration__diagram">
            <div class="integration__center">
              <div class="integration__logo">Conterso</div>
            </div>
            <div class="integration__products">
              <div class="integration__product">Doors</div>
              <div class="integration__product">Work</div>
              <div class="integration__product">Sounder</div>
              <div class="integration__product">Mider</div>
              <div class="integration__product">Shield</div>
              <div class="integration__product">Flow</div>
            </div>
          </div>
          
          <div class="integration__benefits">
            <div class="benefit">
              <h3 class="benefit__title">Unified Experience</h3>
              <p class="benefit__description">
                Consistent interface and workflows across all applications
              </p>
            </div>
            <div class="benefit">
              <h3 class="benefit__title">Shared Resources</h3>
              <p class="benefit__description">
                Files and data seamlessly flow between applications
              </p>
            </div>
            <div class="benefit">
              <h3 class="benefit__title">Centralized Management</h3>
              <p class="benefit__description">
                Single point of control for licenses, updates, and security
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="cta">
      <div class="container">
        <div class="cta__content">
          <h2 class="cta__title">Ready to Get Started?</h2>
          <p class="cta__description">
            Contact our team to learn how Conterso products can transform your business operations.
          </p>
          <a href="/contact" class="btn btn--primary btn--large">Contact Sales</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-background-light) 0%, var(--color-background) 100%);
    padding: 6rem 0 4rem;
  }

  .hero__content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .hero__title {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
  }

  .hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-secondary);
    line-height: 1.6;
  }

  /* Products Section */
  .products {
    padding: 6rem 0;
  }

  .products__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 3rem;
  }

  .product {
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: 1rem;
    overflow: hidden;
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .product:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
  }

  .product__image {
    width: 100%;
    height: 250px;
    overflow: hidden;
    background-color: var(--color-background-light);
  }

  .product__image-element {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product__content {
    padding: 2.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .product__header {
    display: flex;
    align-items: center;
    margin-bottom: 2rem;
  }

  .product__icon {
    color: var(--color-accent);
    margin-right: 1.5rem;
    flex-shrink: 0;
  }

  .product__title {
    font-size: 2rem;
    margin-bottom: 0.25rem;
    color: var(--color-primary);
  }

  .product__category {
    color: var(--color-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    font-weight: 600;
    letter-spacing: 0.05em;
  }

  .product__description {
    color: var(--color-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .product__features {
    list-style: none;
    margin-bottom: 2rem;
    flex: 1;
  }

  .product__features li {
    color: var(--color-secondary);
    margin-bottom: 0.75rem;
    position: relative;
    padding-left: 1.5rem;
  }

  .product__features li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--color-accent);
    font-weight: bold;
  }

  .product__actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  /* Integration Section */
  .integration {
    background-color: var(--color-background-light);
    padding: 6rem 0;
  }

  .section__title {
    text-align: center;
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .section__subtitle {
    text-align: center;
    color: var(--color-secondary);
    margin-bottom: 4rem;
    font-size: 1.125rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .integration__diagram {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 4rem;
    min-height: 300px;
  }

  .integration__center {
    position: absolute;
    z-index: 2;
  }

  .integration__logo {
    background-color: var(--color-accent);
    color: white;
    padding: 2rem 3rem;
    border-radius: 50%;
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 400;
    width: 120px;
    height: 120px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
  }

  .integration__products {
    position: relative;
    width: 400px;
    height: 400px;
  }

  .integration__product {
    position: absolute;
    background-color: var(--color-background);
    border: 2px solid var(--color-accent);
    padding: 1rem 1.5rem;
    border-radius: 2rem;
    font-weight: 600;
    color: var(--color-accent);
  }

  .integration__product:nth-child(1) {
    top: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .integration__product:nth-child(2) {
    right: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .integration__product:nth-child(3) {
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
  }

  .integration__product:nth-child(4) {
    left: 0;
    top: 50%;
    transform: translateY(-50%);
  }

  .integration__benefits {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .benefit {
    text-align: center;
  }

  .benefit__title {
    margin-bottom: 1rem;
    color: var(--color-primary);
  }

  .benefit__description {
    color: var(--color-secondary);
    line-height: 1.6;
  }

  /* CTA Section */
  .cta {
    background-color: var(--color-primary);
    color: white;
    padding: 6rem 0;
  }

  .cta__content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta__title {
    color: white;
    margin-bottom: 1rem;
  }

  .cta__description {
    color: rgba(255, 255, 255, 0.8);
    margin-bottom: 2rem;
    font-size: 1.125rem;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 0.875rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid;
    font-size: 1rem;
  }

  .btn--primary {
    background-color: var(--color-accent);
    color: white;
    border-color: var(--color-accent);
  }

  .btn--primary:hover {
    background-color: #0052a3;
    border-color: #0052a3;
    text-decoration: none;
  }

  .btn--secondary {
    background-color: transparent;
    color: var(--color-primary);
    border-color: var(--color-border);
  }

  .btn--secondary:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
    text-decoration: none;
  }

  .btn--large {
    padding: 1.125rem 2.5rem;
    font-size: 1.125rem;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero {
      padding: 4rem 0 3rem;
    }

    .hero__title {
      font-size: 2.5rem;
    }

    .products {
      padding: 4rem 0;
    }

    .products__grid {
      grid-template-columns: 1fr;
    }

    .product__actions {
      flex-direction: column;
    }

    .btn {
      text-align: center;
    }

    .integration {
      padding: 4rem 0;
    }

    .integration__diagram {
      min-height: 250px;
    }

    .integration__products {
      width: 300px;
      height: 300px;
    }

    .integration__logo {
      width: 100px;
      height: 100px;
      font-size: 1.25rem;
      padding: 1.5rem;
    }

    .cta {
      padding: 4rem 0;
    }
  }
</style>